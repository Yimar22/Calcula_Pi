<?xml version="1.0" encoding="UTF-8"?>

<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
  xmlns:frascati="http://frascati.ow2.org/xmlns/sca/1.1"
  targetNamespace="http://frascati.ow2.org/helloworld-rmi"
  name="ClientRMI">

  <service name="r" promote="client/r">
    <interface.java interface="java.lang.Runnable" />
  </service>

  <component name="client">

    <property name="serverUri">rmi://localhost:1099/rmiservice</property>

    <service name="r">
      <interface.java interface="java.lang.Runnable" />
    </service>

	<service name="generarPts">
   <frascati:binding.rmi host="localhost" serviceName="GenerarPts" port="2003"/>
      <interface.java interface="main.java.org.ow2.frascati.finalproject.calculatepi.annotated.GenerarPts" />
    </reference>

    <reference name="calcularPi">
      <frascati:binding.rmi host="localhost" serviceName="rmiservice" port="1099"/>
   <interface.java interface="main.java.org.ow2.frascati.finalproject.calculatepi.annotated.CalcularPi" />
    </reference>

    <implementation.java class="main.java.org.ow2.frascati.finalproject.calculatepi.annotated.ClientImpl;" />
   

  </component>

</composite>
